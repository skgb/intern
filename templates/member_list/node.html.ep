<%= $key->{_nr} && "Nr. $key->{_nr} " %><%= $key->{deposit} ? "gegen $key->{deposit} $key->{currency}" : "ohne" %> Pfand<%= $key->{returned} && " (zurückgegeben, Pfandrückzahlung noch nicht erfolgt)" %><%= $key->{comment} && " ($key->{comment})" %>
%#=  dumper $key
% }
<%= "ohne\n" if ! scalar @$clubkeys;

%>
